<style>
    #map-container {
        position: relative;
    }

    .marker {
        position: absolute;
        width: 15px;
        height: 15px;
        background-color: red;
        border-radius: 50%;
        cursor: pointer;
        user-select: none;
    }
</style>
<div class="card">
    <div class="card-header" style="background-color: #4285f4; color: white;">
        <h5 style="margin: 0;">
            Tambah Jenis Paket Baru
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-7">
                <label style="font-weight: bold;" for="addSender">Nama Jenis Paket<b style="color: red">*</b></label><br>
                <span id="MainContent_reqAddSender" class="validator" style="display:none;">&nbsp;<i class="fas fa-exclamation-circle"></i></span>
                <input name="ctl00$MainContent$addSender" type="text" maxlength="25" id="pak_nama_jenis" class="form-control" style=" display: inline;">
                <div class="mb-3"></div>
            </div>
        </div>
        <div class="float-right" style="margin-bottom: 15px;">
            <a id="MainContent_linkCancelAdd" class="btn btn-secondary" asp-action="Index">Batal</a>
            <button type="button" onclick="simpan()" class="btn btn-primary">Simpan</button>
        </div>
    </div>
</div>

<script>
    function simpan() {
        var pak_nama_jenis = document.getElementById("pak_nama_jenis").value;



        var hostname = "https://localhost:7120/";
        var url = hostname + "InsertJenisPaket";
        var method = "POST";
        var input = {
            pak_nama_jenis: pak_nama_jenis



        };
        var data = JSON.stringify(input);

        $.ajax({
            url: url,
            method: method,
            data: data,
            contentType: "application/json",
            success: function (data) {
                alert("Data Berhasil Ditambahkan");
                // Mengarahkan kembali ke halaman index di controller Home
                window.location.href = '@Url.Action("Index", "JenisPaket")';
            },
        });
    }

</script>
